{
    "name": "esp-mvc",
    "description": "ESP MVC Framework",
    "version": "1.0.0",
    "keywords": [
        "esp",
    ],
    "precious": true,
    "dependencies": {
        "esp-server": "~1.0",
    },
    "dirs": {
        "client": "client",
        "paks": "client/paks"
    },
    "export": [
        "templates/**"
    ],
    "esp": {
        "combined": false,
        "update": true,
        "serverPrefix": "/do",
        "server": {
            "generate": {
                "appweb": "esp-mvc/appweb.conf",
                "migration": "esp-mvc/migration.c",
                "controller": "esp-mvc/controller.c",
                "controller-singleton": "esp-mvc/controller.c",
                "files": [
                    "esp-mvc/src/app.c"
                ]
            }
        }
    }
}
