{
    "esp": {
        "?app": true,
        "generate": {
            "?appweb": "esp-mvc/generate/appweb.conf",
            "?controller": "esp-mvc/generate/controller.c",
            "?controllerSingleton": "esp-mvc/generate/controller.c",
            "?migration": "esp-mvc/generate/migration.c",
            "?module": "esp-mvc/generate/src/app.c"
        }
    },
    "http": {
        "auth": {
            "?store": "app"
        },
        "?database": "default",
        "formats": {
            "?date": "yyyy-MM-dd",
            "?float": 2
        },
        "?routes": "esp-restful"
    },
    "modes": {
        "debug": {
            "esp": {
                "combine": false,
                "compile": true,
                "optimize": false,
                "update": true
            }
        },
        "release": {
            "esp": {
                "combine": true,
                "compile": true,
                "optimize": true,
                "update": true
            },
            "http": {
                "compress": true
            }
        }
    }
}
