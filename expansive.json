/*
    expansive.json - Configuration for esp-mvc
 */
{
    control: {
        deploy: {
            from: [
                'dist/**',
                'db/*.*',
                '!db/*.bak',
                'cache/*.dylib',
                'cache/*.so',
                'cache/*.dll',
                'cache/*.lib',
                'esp.json',
                'package.json'
            ],
            to: 'deploy',
            clean: true
        }
    },
    release: {
        services: {
            "minify-css": {
                minify: true
            }
        }
    }
}
